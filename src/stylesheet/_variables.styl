// Color
$primary-color = green
$secondary-color = red

$bg-color = #FFF
$selection-color = #FFF
$selection-bg-color = $primary-color

// Typography
$font-family-serif = "Nunito", Times, Georgia, Serif
$font-family-sans = -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", Arial, sans-serif
$font-family-mono = "Courier New", Courier, monospace
$font-family-base = $font-family-sans

$base-font-size = 16px
$base-line-height = 24px
$base-text-color = #000

$font-size-h1 = 36px
$font-size-h2 = 32px
$font-size-h3 = 30px
$font-size-h4 = 28px
$font-size-h5 = 24px
$font-size-h6 = 20px
